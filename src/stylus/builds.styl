@import variables

.build-list
  margin 2em auto

  .build
    padding 1em

    h3
      margin 0

    a
      font-weight 300
      text-decoration none

    .meta
      margin-top 1em

      span
        font-size 0.9em
        margin-right 0.4em

      .message
        margin-bottom 0.6em

    &.green
      border-left 10px solid build-color-green
      background build-background-green

      &:hover
        border-color darken(build-background-green, 10%)
        background darken(build-background-green, 10%)

    &.red
      border-left 10px solid build-color-red
      background build-background-red

      &:hover
        border-color darken(build-background-red, 10%)
        background darken(build-background-red, 10%)

    &.orange
      border-left 10px solid build-color-orange
      background build-background-orange

      &:hover
        border-color darken(build-background-orange, 10%)
        background darken(build-background-orange, 10%)

.build-details
  width: 90%
  margin 0 auto

  h3
    margin-bottom 0.2em
    font-weight 300
    cursor pointer

    .fa
      margin-right 0.4em

  pre
    padding 1em
    font-size 0.8em
    white-space: pre-wrap;
    word-wrap: break-word;
    background code-background

  code
    width 100%
    max-width 100%
    overflow scroll

  .meta
    font-size 0.6em
    margin-left 0.5em

  .tasks
    padding-top 1.5em

@media screen and (min-width: 1000px)
  .build-details
    .details
      width 44%
      display block
      float left

    .message
      width 44%
      display block
      float right

    .tasks
      clear both


@media screen and (min-width: 1200px)
  .build-details
    width: 100%
